{
  "name": "backend",
  "image": "!!BACKEND_IMAGE_TAG!!",
  "cpu": 256,
  "memory": 512,
  "networkMode": "awsvpc",
  "logConfiguration": {
    "logDriver": "awslogs",
    "options": {
      "awslogs-group": "/aws/ecs/communication/home-backend",
      "awslogs-region": "us-east-2",
      "awslogs-stream-prefix": "ecs"
    }
  },
  "portMappings": [
    {
      "containerPort": 8080,
      "hostPort": 8080
    }
  ],
  "healthCheck": {
    "command": ["CMD-SHELL", "curl -f http://localhost:8080/api/q/health"],
    "interval": 5,
    "timeout": 3,
    "retries": 3,
    "startPeriod": 10
  },
  "restartPolicy": {
    "enabled": true,
    "restartAttemptPeriod": 70
  }
}
